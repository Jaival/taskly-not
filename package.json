{
  "name": "taskly",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky",
    "commitlint": "commitlint --edit",
    "commit": "cz",
    "clean": "rmdir /s /q node_modules",
